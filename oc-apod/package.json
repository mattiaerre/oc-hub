{
  "name": "oc-apod",
  "description": "This component displays picture, title, description and date of the NASA's Astronomy Picture of the Day",
  "version": "1.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattiaerre/oc-hub/tree/master/oc-apod"
  },
  "author": {
    "name": "Mattia Richetto",
    "email": "mattia.richetto@gmail.com"
  },
  "oc": {
    "files": {
      "data": "server.js",
      "template": {
        "src": "template.jade",
        "type": "jade"
      }
    },
    "parameters": {
      "apiKey": {
        "type": "string",
        "mandatory": true,
        "example": "DEMO_KEY",
        "description": "The NASA Open APIs key"
      }
    }
  },
  "dependencies": {
    "node-fetch": "^1.7.1"
  },
  "devDependencies": {
    "jest": "^20.0.4"
  },
  "scripts": {
    "test": "jest"
  }
}
